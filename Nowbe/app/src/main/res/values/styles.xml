<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Welcome">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/primary</item>
    </style>

    <!-- Transparent theme to use in activities -->
    <style name="TransparentTheme" parent="AppTheme.NoActionBar">
        <item name="android:actionMenuTextColor">@color/primary_text_white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- General -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <!-- Login/Signup button -->
    <style name="LoginSignupButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/accent</item>
    </style>

    <style name="LoginSignupButtonText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text_white</item>
    </style>

    <!-- Edit profile edit text style -->
    <style name="EditProfileSecondTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Edit profile title text -->
    <style name="EditProfileTitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/activity_horizontal_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_text_white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditProfileEditText">
        <item name="colorControlNormal">@color/primary_text_white</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/primary_text_white_hint</item>
    </style>

    <!-- Edit profile cards properties -->
    <style name="SettingsCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/cardview_light_background</item>
    </style>

    <style name="SettingsCard_Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsCard_OptionButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SettingsCard_OptionButton.NoAction">
        <item name="android:clickable">false</item>
    </style>

    <style name="SettingsCard_OptionButton_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SettingsCard_OptionButton_SubText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textColor">@color/primary_text_white_hint</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Bottom sheets -->
    <style name="BottomSheetDialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BottomSheetDialogAction">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_sheet.default_action_vertical</item>
        <item name="android:paddingTop">@dimen/bottom_sheet.vertical_margin</item>
        <item name="android:paddingBottom">@dimen/bottom_sheet.vertical_margin</item>
        <item name="android:paddingLeft">@dimen/bottom_sheet.horizontal_margin</item>
        <item name="android:paddingRight">@dimen/bottom_sheet.horizontal_margin</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BottomSheetDialogImageView">
        <item name="android:layout_width">@dimen/bottom_sheet.icon_size</item>
        <item name="android:layout_height">@dimen/bottom_sheet.icon_size</item>
    </style>

    <style name="BottomSheetDialogTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/bottom_sheet.text_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/bottom_sheet.horizontal_margin</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
